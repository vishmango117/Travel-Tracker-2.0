BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3334
        Label:
            text:'Place'
        TextInput:
            text: ''
            id: place_input
            multiline: False
            on_text: app.handle_validation(place_input.text)
        Label:
            text:'Country'
        TextInput:
            text: ''
            id: country_input
            multiline: False
            on_text: app.handle_validation(country_input.text)
        Label:
            text:'Priority'
        TextInput:
            text: ''
            id: priority_input
            multiline: False
            on_text: app.handle_validation(priority_input.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Submit'
                on_press: app.handle_changes(1)
            Button:
                id: down_button
                text: 'Clear'
                on_press: app.handle_changes(-1)
