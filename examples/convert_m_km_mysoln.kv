BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '0'
            id: user_input
            multiline: False
            on_text: app.handle_validation(int(user_input.text))
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_changes(1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_changes(-1)
