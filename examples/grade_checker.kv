BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            font_size: 30
            size_hint_x: 0.25
            id: clear-button
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            font_size: 30
            id: score_input
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            font_size: 30
            size_hint_x: 0.25
            id: greet-button
            text: 'Check'
            on_press: app.handle_check(int(score_input.text))
        Label:
            font_size: 30
            id: output_label
            text: ''
            color: (1,1,0,1)